<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="device_prefs.xml"/>
        <exclude domain="database" path="user_data.db"/>
        <exclude domain="file" path="temp/"/>
    </cloud-backup>
    <device-transfer>
        <!-- Include app data in device transfer -->
        <include domain="sharedpref" path="app_prefs.xml"/>
        <include domain="database" path="app_database.db"/>
        <include domain="file" path="videos/"/>
    </device-transfer>
</data-extraction-rules>