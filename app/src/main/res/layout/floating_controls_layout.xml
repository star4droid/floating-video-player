<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="60dp"
    android:background="@drawable/controls_background"
    android:padding="8dp">

    <!-- Drag handle -->
    <View
        android:id="@+id/drag_handle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:background="@drawable/drag_handle"
        android:alpha="0.5" />

    <!-- Control buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <!-- Video Player Button -->
        <ImageButton
            android:id="@+id/btn_controls_video_player"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_play"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Video Player"
            android:layout_marginEnd="8dp"
            android:padding="4dp" />

        <!-- File Manager Button -->
        <ImageButton
            android:id="@+id/btn_controls_file_manager"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_folder"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="File Manager"
            android:layout_marginEnd="8dp"
            android:padding="4dp" />

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/btn_controls_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_settings"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            android:layout_marginEnd="8dp"
            android:padding="4dp" />

        <!-- Close All Button -->
        <ImageButton
            android:id="@+id/btn_controls_close_all"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close All"
            android:padding="4dp" />

    </LinearLayout>

</FrameLayout>