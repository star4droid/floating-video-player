<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="space_between"
            android:padding="12dp"
            android:background="#2196F3">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="File Manager"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center_vertical" />

            <!-- Action buttons -->
            <ImageButton
                android:id="@+id/btn_up_directory"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_up"
                android:background="@android:color/transparent"
                android:contentDescription="Up Directory"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_home"
                android:background="@android:color/transparent"
                android:contentDescription="Home"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btn_refresh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_refresh"
                android:background="@android:color/transparent"
                android:contentDescription="Refresh"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btn_minimize_filemanager"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_minimize"
                android:background="@android:color/transparent"
                android:contentDescription="Minimize"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btn_close_filemanager"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_close"
                android:background="@android:color/transparent"
                android:contentDescription="Close" />

        </LinearLayout>

        <!-- Current Path -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="#F5F5F5">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_folder"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_current_path"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/sdcard"
                android:textSize="12sp"
                android:textColor="#666666"
                android:ellipsize="start"
                android:maxLines="1"
                android:singleLine="true" />

        </LinearLayout>

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search files..."
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="8dp"
                    android:imeOptions="actionSearch"
                    android:inputType="text" />

                <ImageButton
                    android:id="@+id/btn_search_clear"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_close"
                    android:background="@android:color/transparent"
                    android:contentDescription="Clear search"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- File List -->
        <ListView
            android:id="@+id/lv_file_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="4dp"
            android:scrollbars="vertical" />

        <!-- File Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="#F5F5F5"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_file_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 items"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tv_loading_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading files..."
                android:textSize="12sp"
                android:textColor="#2196F3"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Bottom Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:background="#EEEEEE">

            <Button
                android:id="@+id/btn_back_parent"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Back"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                style="@style/Widget.AppCompat.Button.Borderless" />

            <Button
                android:id="@+id/btn_select_video"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Play Video"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                style="@style/Widget.AppCompat.Button.Colored" />

            <Button
                android:id="@+id/btn_open_with"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Open With"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                style="@style/Widget.AppCompat.Button.Borderless" />

        </LinearLayout>

    </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Resize handles -->
    <!-- Top-left corner -->
    <FrameLayout
        android:id="@+id/resize_handle_top_left"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="start|top"
        android:layout_margin="4dp"
        android:background="@drawable/resize_handle"
        android:clickable="true"
        android:focusable="true" />

    <!-- Top-right corner -->
    <FrameLayout
        android:id="@+id/resize_handle_top_right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end|top"
        android:layout_margin="4dp"
        android:background="@drawable/resize_handle"
        android:clickable="true"
        android:focusable="true" />

    <!-- Bottom-left corner -->
    <FrameLayout
        android:id="@+id/resize_handle_bottom_left"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="start|bottom"
        android:layout_margin="4dp"
        android:background="@drawable/resize_handle"
        android:clickable="true"
        android:focusable="true" />

    <!-- Bottom-right corner -->
    <FrameLayout
        android:id="@+id/resize_handle_bottom_right"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="4dp"
        android:background="@drawable/resize_handle"
        android:clickable="true"
        android:focusable="true" />

    <!-- Left side -->
    <View
        android:id="@+id/resize_handle_left"
        android:layout_width="8dp"
        android:layout_height="40dp"
        android:layout_gravity="start|center_vertical"
        android:layout_margin="4dp"
        android:background="@drawable/resize_handle_vertical"
        android:clickable="true"
        android:focusable="true" />

    <!-- Right side -->
    <View
        android:id="@+id/resize_handle_right"
        android:layout_width="8dp"
        android:layout_height="40dp"
        android:layout_gravity="end|center_vertical"
        android:layout_margin="4dp"
        android:background="@drawable/resize_handle_vertical"
        android:clickable="true"
        android:focusable="true" />

    <!-- Top side -->
    <View
        android:id="@+id/resize_handle_top"
        android:layout_width="40dp"
        android:layout_height="8dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_margin="4dp"
        android:background="@drawable/resize_handle_horizontal"
        android:clickable="true"
        android:focusable="true" />

    <!-- Bottom side -->
    <View
        android:id="@+id/resize_handle_bottom"
        android:layout_width="40dp"
        android:layout_height="8dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="4dp"
        android:background="@drawable/resize_handle_horizontal"
        android:clickable="true"
        android:focusable="true" />

</FrameLayout>